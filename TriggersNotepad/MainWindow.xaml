                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE7EFFB" Offset="0"/>
                        <GradientStop Color="#FFDCE4F0" Offset="1"/>
